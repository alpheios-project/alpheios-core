{
  "name": "alpheios-client-adapters",
  "version": "3.4.4",
  "description": "Alpheios Client Adapters Library",
  "private": true,
  "main": "dist/alpheios-client-adapters.min.js",
  "scripts": {
    "test": "jest --coverage && shx cat ./coverage/lcov.info | coveralls",
    "test-no-coverage": "jest",
    "test-c": "jest tests/client-adapters.test.js",
    "test-u": "jest tests/adapters/detectlang/adapter.test.js  --coverage",
    "test-l": "jest tests/adapters/logeion/adapter.test.js",
    "test-a": "jest tests/adapters/arethusa/adapter.test.js",
    "build": "npm run build-lib && npm run build-node",
    "build-lib": "npm run lint &&  node --experimental-modules ../../node_modules/alpheios-node-build/dist/build.mjs -m webpack -M all -p vue -c config.mjs",
    "build-node": "npm run lint &&  node --experimental-modules ../../node_modules/alpheios-node-build/dist/build.mjs -m webpack -M all -p node-lib -c config-node.mjs",
    "build-prod": "npm run lint &&  node --experimental-modules ../../node_modules/alpheios-node-build/dist/build.mjs -m webpack -M production -p vue -c config.mjs",
    "build-dev": "npm run lint &&  node --experimental-modules ../../node_modules/alpheios-node-build/dist/build.mjs -m webpack -M development -p vue -c config.mjs",
    "lint": "npx eslint --fix src/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alpheios-project/client-adapters.git"
  },
  "author": "The Alpheios Project, Ltd.",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alpheios-project/alpheios-core/issues"
  },
  "homepage": "https://github.com/alpheios-project/client-adapters#readme",
  "devDependencies": {
    "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
    "@babel/runtime": "^7.12.5",
    "alpheios-data-models": "^3.4.4",
    "alpheios-fixtures": "https://github.com/alpheios-project/fixtures",
    "alpheios-l10n": "^3.4.4",
    "alpheios-messaging": "https://github.com/alpheios-project/alpheios-messaging",
    "alpheios-node-build": "https://github.com/alpheios-project/node-build#v5",
    "axios": "^0.21.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "coveralls": "^3.1.0",
    "fast-xml-parser": "^3.17.4",
    "jest": "^26.6.3",
    "jest-fetch-mock": "^3.0.3",
    "jest-raw-loader": "^1.0.1",
    "jest-serializer-vue": "^2.0.2",
    "jest-vue-preprocessor": "^1.7.1",
    "papaparse": "^5.3.0",
    "readable-stream": "^3.6.0",
    "whatwg-fetch": "^3.5.0",
    "xmltojson": "^1.3.5"
  },
  "engines": {
    "node": ">= 14.1.0",
    "npm": ">= 6.13.0"
  },
  "jest": {
    "verbose": true,
    "globals": {
      "DEVELOPMENT_MODE_BUILD": true
    },
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "transform": {
      "\\.xml$": "jest-raw-loader",
      "\\.js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleNameMapper": {
      "^@clAdapters[/](.+)": "<rootDir>/src/$1",
      "^@tests[/](.+)": "<rootDir>/tests/$1",
      "alpheios-data-models": "<rootDir>/node_modules/alpheios-data-models/dist/alpheios-data-models.js",
      "alpheios-l10n": "<rootDir>/node_modules/alpheios-l10n/dist/alpheios-l10n.js",
      "alpheios-messaging": "<rootDir>../../node_modules/alpheios-messaging/dist/dev/alpheios-messaging.node.js",
      "alpheios-fixtures": "<rootDir>../../node_modules/alpheios-fixtures/dist/alpheios-fixtures.js"
    },
    "moduleFileExtensions": [
      "js",
      "vue"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:vue/essential"
    ],
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "experimentalObjectRestSpread": true
    },
    "rules": {
      "no-prototype-builtins": "warn",
      "dot-notation": "warn",
      "accessor-pairs": "warn",
      "no-unused-vars": "warn",
      "getter-return": "warn",
      "no-setter-return": "warn"
    }
  },
  "eslintIgnore": [
    "**/dist",
    "**/support"
  ]
}
